extends ../layouts/common.pug
block content
    h1 Create new book
    if errors 
        each error in errors
            .alert.alert-danger=error
    form(action="/books/create" method="POST")
        div(class="form-group ml-4 mr-5")
            label Title
            span &nbsp
            input(type="text", name = "title", class="form-control", value= values? values.title : '') 
        div(class="form-group ml-4 mr-5")
            label Description
            span &nbsp
            input(type="text", name = "description", class="form-control", value= values? values.description : '')
            br
            br
        button(class="btn btn-primary ml-4 mr-5") Create