extends ../layouts/common.pug
block content   
    h1 New user
    if errors 
        each error in errors
            .alert.alert-danger=error
    form(action="/auth/signup", method="POST")
        .form-group
            label Name
            input(type="text", name='name', class="form-control ml-4", value= values? values.name : '')
            label Phone
            input(type="text", name='phone', class="form-control ml-4", value= values? values.phone : '')
            label Email
            input(type="email", name='email', class="form-control ml-4", value= values? values.email : '')
            label Password
            input(type="password", name='password', class="form-control ml-4", value= values? values.password : '')
        button(class="btn btn-primary ml-4 mt-3") Create