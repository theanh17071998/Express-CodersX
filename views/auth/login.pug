extends ../layouts/common.pug
block content   
    h1(class='ml-5') Login
    if errors 
        each error in errors
            .alert.alert-danger=error
    form(action="/auth/login", method="POST")
        .form-group.ml-5
            label Email
            input(type="email", name='email', class="form-control ml-4", value= values? values.email : '')
            label Password
            input(type="password", name='password', class="form-control ml-4",)
        button(class="btn btn-primary ml-4 mt-3") Login

    a(href='/auth/signup', class="btn btn-primary ml-2 mt-2 badge ") Tạo tài khoản mới