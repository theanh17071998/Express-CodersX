extends ../layouts/common.pug
block content
    .d-flex.align-items-center
        h1(class='mr-3') Sửa user
        a(href=`/users/profile/avatar/${user.id}`) Thay đổi avatar
    form(action=`/users/update/${user.id}`, method="POST")
        label Name
        input(type="text", name='name', value=user.name, class="form-control ml-4")
        label Phone
        input(type="text", name='phone', value=user.phone, class="form-control ml-4")
        button(class="btn btn-primary ml-4 mt-3") Save