extends ../layouts/common.pug
block content
    .ml-5
        h1 Update avatar
        .card(style='width: 18rem;')    
            img.card-img-top(src=user.avatar, alt='...', width='64')
            .card-body
                h5.mt-0.mb-1.mr-3 Avatar old
        form(action=`/users/profile/avatar/${user.id}`, method="POST", enctype="multipart/form-data")
            .form-group
                label(for='avatar') New avatar
                input#avatar.form-control-file(name='avatar', type='file')
            button(class="btn btn-primary ml-4 mt-3") Save