extends ../layouts/common.pug
block content
    h1
      span.mr-4 Cart
      a(href="/books", class="btn btn-primary ml-2 mt-2") Add New Book
    table(style='width:90% ', class='ml-4 table table-bordered')
      tr(class="border")
        th Book id
        th Title
        th Actions
        each book in cart
          tr(class="border")
            td=book.id
            td=book.title
            td
                 a(href="/cart/delete/" + book.id, class="btn btn-primary") Delete
